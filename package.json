    "eventemitter3": "^4.0.0",
    "query-string": "^7.0.1",
    "react": "18.3.1",
    "react-native": "0.76.9",
    "react-native-device-info": "^14.0.2",
    "react-native-gesture-handler": "^2.25.0",
    "react-native-nfc-manager": "^4.0.0-beta.3",
    "react-native-paper": "^5.12.3",
